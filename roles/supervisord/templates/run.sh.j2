#!/bin/sh

PATH=/usr/local/perl-5.18/bin:/bin:/usr/bin:/sbin:/usr/sbin:/usr/local/bin
export PATH

NCPU=`getconf _NPROCESSORS_ONLN`
WORKERS=$(expr $NCPU \* 2)

cd /var/www/movabletype

exec starman --workers=$WORKERS --listen :8080 --listen /var/run/movabletype/sock --error-log=/var/log/movabletype/error.log --pid=/var/run/movabletype/pid mt.psgi
