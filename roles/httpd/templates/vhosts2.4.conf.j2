{% if movabletype %}
    Alias        /mt-static /var/www/movabletype/mt-static
{% endif %}
    TraceEnable  Off

{% if movabletype and mt.psgi is not defined %}
    ScriptAlias  /mt /var/www/movabletype
{% endif %}

    <Directory /var/www/vhosts/{{ item.name }}/htdocs>
        Options FollowSymLinks
        AllowOverride All
        Require all granted
    </Directory>

    #RequestHeader set X_FORWARDED_PROTO "https"

{% if mt.basic is defined %}
    <Location "/mt/">
        AuthType Basic
        AuthName "MovableType"
        AuthUserFile /var/www/htpasswd
